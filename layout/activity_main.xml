<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/image1"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone"
        android:layout_below="@+id/image1"
        android:layout_centerHorizontal="true"
        android:id="@+id/image2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image2"
        android:layout_centerHorizontal="true"
        android:text="Get things done with ToDo"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinsbold"
        android:textSize="18sp"
        android:textColor="@color/Black"
        android:id="@+id/text1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industryâ€™s standard dummy text ever since"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text1"
        android:padding="30dp"
        android:fontFamily="@font/poppinsregular"
        android:fontSize="12sp"
        android:textColor="@color/Black"
        android:id="@+id/text2"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:text="Login"
        android:textColor="@color/White"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsbold"
        android:background="@drawable/button_shape"
        android:id="@+id/button1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:text="Register"
        android:layout_marginTop="13dp"
        android:textColor="@color/White"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsbold"
        android:background="@drawable/button_shape"
        android:id="@+id/button2"
        />

</RelativeLayout>